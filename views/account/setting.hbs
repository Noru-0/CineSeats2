<section class="d-flex">
    {{> sidebar2 }}

    <section class="container m-5 py-4 bg-white rounded shadow">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        Edit Profile
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="mb-2">
                                <label for="yourName" class="form-label">First Name</label>
                                <input type="text" class="form-control" id="yourName" value="Ismail Hossain">
                            </div>
                            <div class="mb-2">
                                <label for="storeName" class="form-label">Last Name</label>
                                <input type="text" class="form-control" id="storeName" value="Maxima Studio">
                            </div>
                            <div class="mb-2">
                                <label for="location" class="form-label">Location</label>
                                <select class="form-select" id="location">
                                    <option selected>VietNam</option>
                                </select>
                            </div>
                            <div class="mb-2">
                                <label for="currency" class="form-label">Favorite Theater</label>
                                <select class="form-select" id="currency">
                                    <option selected>CineStar</option>
                                </select>
                            </div>
                            <div class="mb-2">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" value="Amijanina@gmail.com">
                            </div>
                            <div class="mb-2">
                                <label for="phone" class="form-label">Phone</label>
                                <input type="text" class="form-control" id="phone" value="01978536547">
                            </div>
                            <div class="mb-2">
                                <label for="address" class="form-label">Address</label>
                                <input type="text" class="form-control" id="address" value="813 Howard Street, Oswego NY, 13126, USA">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header">
                        Change Password
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="mb-3">
                                <label for="currentPassword" class="form-label">Current Password</label>
                                <input type="password" class="form-control" id="currentPassword" value="**********">
                            </div>
                            <div class="mb-3">
                                <label for="newPassword" class="form-label">New Password</label>
                                <input type="password" class="form-control" id="newPassword" value="**********">
                            </div>
                            <div class="mb-3">
                                <label for="confirmPassword" class="form-label">Confirm Password</label>
                                <input type="password" class="form-control" id="confirmPassword" value="**********">
                            </div>
                        </form>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        Notifications
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="form-check form-switch mb-3">
                                <input class="form-check-input" type="checkbox" id="orderConfirmation" checked>
                                <label class="form-check-label" for="orderConfirmation">Order Confirmation</label>
                                <small class="form-text text-muted">You will be notified when customer order any product</small>
                            </div>
                            <div class="form-check form-switch mb-3">
                                <input class="form-check-input" type="checkbox" id="orderStatusChanged">
                                <label class="form-check-label" for="orderStatusChanged">Order Status Changed</label>
                                <small class="form-text text-muted">You will be notified when customer make changes to the order</small>
                            </div>
                            <div class="form-check form-switch mb-3">
                                <input class="form-check-input" type="checkbox" id="orderDelivered" checked>
                                <label class="form-check-label" for="orderDelivered">Order Delivered</label>
                                <small class="form-text text-muted">You will be notified once the order is delivered</small>
                            </div>
                            <div class="form-check form-switch mb-3">
                                <input class="form-check-input" type="checkbox" id="emailNotification" checked>
                                <label class="form-check-label" for="emailNotification">Email Notification</label>
                                <small class="form-text text-muted">Turn on email notification to get updates through email</small>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-end mt-3">
            <button type="button" class="btn btn-primary">Save</button>
        </div>
    </section>
</section>
