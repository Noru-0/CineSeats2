<section>
    <div class="d-flex">
        {{> sidebar}}
        <div class="content  col-md-10">
            <div class="content ">
                <h1>Account Management</h1>
                <p> Hi. Welcome back to CineSeats Admin!</p>

                <div class="container-admin ">
                    <div class="filter-options ">
                        <input type="search" placeholder="search name..." class="filter " id="search">

                        <label for="role">Role:</label>
                        <select id="role" class="filter">
                            <option value="all">All</option>
                            <option value="user">User</option>
                            <option value="admin">Admin</option>
                            <option value="employee">Employee</option>
                        </select>

                        <label for="sort">Sort by:</label>
                        <select id="sort" class="filter" style="width: 200px;">
                            <option value="none">None</option>
                            <option value="role">Role</option>
                            <option value="name">Name</option>
                            <option value="email">Email</option>
                        </select>

                        <button id="filter"> Filter </button>
                    </div>
                    <br>

                    <table id="user-db">
                        <!-- hien trong backend -->
                    </table>

                    <div class="actions">
                        <button>Select All</button>
                        <button class="delete-btn">Block User</button>
                    </div>
                </div>
            </div>

            {{!--
            <script src="./account.js"></script> --}}
        </div>
    </div>
</section>